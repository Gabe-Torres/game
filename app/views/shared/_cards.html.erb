<div class="grid grid-cols-3 gap-3 mb-5">
  <% groupings.each do |grouping| %>
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="px-4 py-5 sm:p-6">
        <div class="border-b border-gray-200 bg-white py-5 mb-4">
          <h3 class="text-base font-semibold text-gray-900">
            Level: <%= grouping.first %>
          </h3>
          <p class="mt-1 text-sm text-gray-500">
            <%= grouping.last.count %> problems
          </p>
        </div>
        <div class="grid grid-cols-4 gap-3 mb-5 justify-items-center">
          <% grouping.last.each do |item| %>
            <%= render "shared/problem_bubble", text: item, color: "gray", text_level: "600" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
